{
  "name": "synaesthesia",
  "version": "1.0.0",
  "description": "Synästhesie - Harmonische Intervalle Visualizer",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "web": "node web-server.js",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "author": "Mo",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.synaesthesia.app",
    "productName": "Synästhesie",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "stream-server.js",
      "stream-client.html",
      "index.html",
      "js/**/*",
      "css/**/*",
      "3d-models/**/*"
    ],
    "mac": {
      "category": "public.app-category.music",
      "icon": "icon.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "icon.ico",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "icon": "icon.png",
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "AudioVideo"
    }
  }
}
